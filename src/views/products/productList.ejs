<!DOCTYPE html>
<html lang="es">
<%- include('../partials/head') %>

    <body>
        <!-- Header -->
        <%- include('../partials/header') %>
            <!-- Barra de navegaciÃ³n -->
            <%- include('../partials/nav') %>
                <!-- Main Home -->
                <main class="productDetail">
                        <% for(products of products) {%>
                    <article class="products_det">
                        <div class="product-menu">
                            <img src="../img/Products/<%= products.fk_idImage_image.name %>" alt="">
                        </div>
                        <div class="product-menu_atributes">
                                <div class="product-description">
                                    <h4 class="product-name"><%= products.name %></h4>
                                    <p class="product-specific"><%= products.description %></p>
                                </div>
                                <div class="product-n">
                                    <p class="product-price">$<%= products.price %> </p>
                                    <p class="product-price"><a id="<%=products.idProducts%>" href="/productCart" >Agregar</a> </p>
                                    <% if(locals.isLogged == true && locals.userInSession.rol == 9) {%>
                                    <p class="product-price"> <a href="/productMod/<%= products.idProducts %>" > Modificar </a></p>
                                    <p class="product-price"> <a href="/productDelete/<%= products.idProducts %>"> Eliminar </a></p>
                                    <%}%>
                                </div>
                            </div>
                        </div>
                        </div>
                    </article>
                    <% } %>
                </main>
                <!--Footer-->
                <%- include('../partials/footer') %>
                <script src="/js/productList.js"></script>
    </body>

</html>