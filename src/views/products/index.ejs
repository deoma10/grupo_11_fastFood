<!DOCTYPE html>
<html lang="es">
<%- include('../partials/head') %>

    <body>
        <!-- Header -->
        <%- include('../partials/header') %>
            <!-- Barra de navegación -->
            <%- include('../partials/nav') %>

                <!-- Main Home -->
                <main class="main">

                    <!-- Carrusel de productos con promoción y/o los más vendios  -->
                    <section class="main__carousel">
                        <img src="/img/burger-mosaic-1.png" alt="Hamburguesa-mosaico-1" class="main__carousel--img1">
                        <img src="/img/burger-mosaic-pc-1.png" alt="Hamburguesa-mosaico-1"
                            class="main__carousel--pcimg1">
                    </section>

                    <!-- Productos destacados con Scroll vertical -->
                    <section class="main__featured">

                        <div class="main__featured-container">
                            <h3 class="main__featured-container--tittle">Escoge tu hambuguesa</h3>
                            <% products.forEach(item=> { %>
                                <article class="main__featured-article">
                                    <img src="/img/Products/<%= item.fk_idImage_image.name %>" alt="Hamburguesa-destacada-1">
                                    <form action="/productDetail/<%= item.idProducts %>" method="get"
                                        class="main-login__form--container">
                                        <div class="main-login__form--button">
                                            <label for="button"></label>
                                            <button type="submit" name="button">
                                                <p>Detalles del producto</p>
                                            </button>
                                        </div>
                                    </form>
                                    <form id="add-cart-prevent" action="/" method="get" class="main-login__form--container">
                                        <div class="main-login__form--button">
                                            <label for="button"></label>
                                            <button type="submit" name="button" >
                                                <p><i id="<%=item.idProducts%>" content="asd" class="fas fa-shopping-cart"></i> Agregar al carrito</p>
                                            </button>
                                        </div>
                                    </form>
                                </article>

                                <% });%>

                        </div>

                        <!-- Aside costado derecho -->
                        <aside class="aside-working">
                            <h3>Tu orden</h3>
                        </aside>

                    </section>
                </main>

                <!--Footer-->
                <%- include('../partials/footer') %>
                <script src="/js/addCart.js"></script>
    </body>

</html>