<!DOCTYPE html>
<html lang="es">
<!--Head-->
<%- include('../partials/head') %>

    <body>
        <!--Header-->
        <%- include('../partials/header') %>
            <!-- Barra de navegación -->
            <%- include('../partials/nav') %>
                <main class="productCreation">
                    <article class="form">
                        <form action="/productDetail">
                            <h2 class="creation--title">Formulario de creación de productos</h2>
                            <div class="creation__form">
                                <input class="creation__form--text" type="text" name="nombreProducto"
                                    placeholder="Nombre producto" required minlength="4">
                            </div>
                            <div class="creation__form">
                                <input class="creation__form--text" type="text" name="categoria" placeholder="Categoría"
                                    required minlength="5">
                            </div>
                            <div class="creation__form">
                                <input class="creation__form--text" type="text" name="precio" placeholder="Precio"
                                    required minlength="4">
                            </div>                            
                            <label class="creation--title">Descripción</label>
                            <div class="creation__form">
                                <textarea class="creation__form--text" name="descripcion" cols="30" rows="10"
                                minlength="10" required></textarea>
                            </div>
                            <label class="creation--title">Imagen del producto</label>
                            <div class="creation__form--img">
                                <input class="creation__--img" type="file" name="img" accept=".jpg .png">
                            </div>
                            <div class="creation__form">
                                <input class="creation__form--button" type="submit" value="Crear producto">
                            </div>
                        </form>
                    </article>
                </main>
                <!--Footer-->
                <%- include('../partials/footer') %>

    </body>

</html>